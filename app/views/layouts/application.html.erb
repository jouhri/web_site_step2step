<!DOCTYPE html>
<html>
<head>
  <title>TestDeviseAndRABL</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<!-- Header and Nav -->
	<header>
		<div class="row">
		  <div class="large-9 columns">
		    <ul class="button-group right">
  		      <li><%= link_to('Home', root_path, :class => "button" ) %></li>
		      <% if user_signed_in? %>
				  <li>
				  <%= link_to('Logout', destroy_user_session_path, :method => :delete, :class => "button") %>
				  <%= link_to('Dashboard', "users/show/#{current_user.id}", :class => "button") %>
				  </li>
				<% else %>
				  <li>
				  <%= link_to('Login', new_user_session_path, :class => "button")  %>  
				  </li>
				<% end %>
		    </ul>
		  </div>
		</div>
	<div class="small-4 columns small-centered">
	  <h1 class="title"><b>Step 2 Step</b></h1>
	</div>
	<%= yield %>
	</section>
	 <!-- Footer -->

	<footer class="row">
	    <div class="large-12 columns">
	      <hr />
	      <div class="row">
	        <div class="large-6 columns">
	          <p>&copy; Copyright no one at all. Go to town.</p>
	        </div>
	        <div class="large-6 columns">
	          <ul class="inline-list right">
	          </ul>
	        </div>
	      </div>
	    </div>
	</footer>
</body>
</html>
